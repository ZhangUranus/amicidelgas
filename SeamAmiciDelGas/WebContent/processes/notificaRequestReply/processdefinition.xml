<?xml version="1.0" encoding="UTF-8"?>

<process-definition  xmlns=""  name="notificaRequestReply">


	<start-state name="NotificaRequest" >
		<transition to="NotificaReply" name="inviaRequest"></transition>
	</start-state>


	<task-node name="NotificaReply" create-tasks="false">
		<task name="riceviMessaggio" />
		<event type="timer-create">
      		<action name="timerCreated" class="org.domain.SeamAmiciDelGas.processes.DeleteCreateTimer">
       			<timerName>timerOpzionale</timerName>
      		</action>
    	</event>
		<event type="node-enter">
			<action name="CambiaDestinatario" class="org.domain.SeamAmiciDelGas.processes.CambiaDestinatarioHandler"></action>
		</event>
		<timer duedate="10 years" name="timerOpzionale" transition="inviaReply"/>
		<transition to="VisualizzaReply" name="inviaReply"></transition>
	</task-node>

	<task-node name="VisualizzaReply">
		<task name="riceviRisposta">
			<assignment actor-id="#{notifyMessageReply.destinatario}"></assignment>
		</task>
		<transition to="end-state" name="fine"></transition>
	</task-node>


	<end-state name="end-state"></end-state>


</process-definition>