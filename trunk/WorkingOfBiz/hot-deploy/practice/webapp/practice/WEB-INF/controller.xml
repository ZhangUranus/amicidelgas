<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">

       <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
       <description>Practice Component Site Configuration File</description>
       <owner>Copyright 2001-2008 The Apache Software Foundation</owner>
	
	
		<handler name="screen" type="view" class="org.ofbiz.widget.screen.ScreenWidgetViewHandler"/>
       <!-- Request Mappings -->
		
       <request-map uri="main">
           <security https="false" auth="false"/>
           <response name="success" type="view" value="main"/>
       </request-map>
       
       <request-map uri="comunebook">
           <security https="false" auth="false"/>
           <response name="success" type="view" value="comunebook"/>
       </request-map>
       
       <request-map uri="setcomuni">
           <security https="false" auth="false"/>
           <response name="success" type="view" value="setcomuni"/>
       </request-map>
       
       <request-map uri="create">
       	   <security https="false" auth="false"/>
       	   <event type="service" invoke="creataProva" />
       	   <response name="success" type="view" value="comunebook"/>
           <response name="error" type="view" value="comunebook"/>       
       </request-map>

       <!-- end of request mappings -->

       <!-- View Mappings -->
	
	   <view-map name="error" type="jsp" page="/error/error.jsp"/>
       <view-map name="main" type="screen" page="component://practice/widget/PracticeScreens.xml#main"/>
       <view-map name="comunebook" type="screen" page="component://practice/widget/PracticeScreens.xml#comunebook"/>
	   <view-map name="setcomuni" type="screen" page="component://practice/widget/PracticeScreens.xml#setcomuni"/>
       <!-- end of view mappings -->

</site-conf>